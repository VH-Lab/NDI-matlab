{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "description": "",
  "required": ["document_class", "depends_on", "openminds"],
  "properties": {
    "document_class": {
      "type": "object",
      "description": "",
      "required": ["definition", "validation", "class_name", "property_list_name", "class_version", "superclasses"],
      "properties": {
        "definition": {
          "type": "string",
          "description": "Path to the document definition file",
          "default": "$NDIDOCUMENTPATH/metadata/openminds.json"
        },
        "validation": {
          "type": "string",
          "description": "Path to the schema validation file",
          "default": "$NDISCHEMAPATH/metadata/openminds.json"
        },
        "class_name": {
          "type": "string",
          "description": "",
          "enum": ["openminds"],
          "enumDescriptions": {
            "openminds": "Specifies this document as an OpenMinds metadata class type"
          }
        },
        "property_list_name": {
          "type": "string",
          "description": "",
          "enum": ["openminds"],
          "enumDescriptions": {
            "openminds": "Defines the property list name for OpenMinds metadata documents"
          }
        },
        "class_version": {
          "type": "integer",
          "description": "Version number of the document class",
          "default": 1
        },
        "superclasses": {
          "type": "array",
          "description": "",
          "items": {
            "type": "object",
            "required": ["definition"],
            "properties": {
              "definition": {
                "type": "string",
                "description": "",
                "enum": ["$NDIDOCUMENTPATH/base.json"],
                "enumDescriptions": {
                  "$NDIDOCUMENTPATH/base.json": "References the base document definition file for inheritance"
                }
              }
            }
          },
          "minItems": 1,
          "maxItems": 1
        }
      }
    },
    "depends_on": {
      "type": "array",
      "description": "Document dependencies with validation rules. Each dependency is specified as a name/value pair.",
      "items": {
        "type": "object",
        "required": ["name", "value"],
        "properties": {
          "name": {
            "type": "string",
            "enum": ["openminds"],
            "description": "Name of the dependency",
            "enumDescriptions": {
              "openminds": "Identifier linking to the openminds document. May be empty."
            }
          },
          "value": {
            "type": "string",
            "description": "Value of the dependency"
          }
        }
      },
      "minItems": 0,
      "maxItems": 1,
      "mustbenotempty": {
        "openminds": false
      }
    },
    "openminds": {
      "type": "object",
      "description": "",
      "required": ["openminds_type", "matlab_type", "openminds_id", "fields"],
      "properties": {
        "openminds_type": {
          "type": "string",
          "description": "The openminds data type.",
          "maxLength": 255,
          "default": "",
          "queryable": true
        },
        "matlab_type": {
          "type": "string",
          "description": "The same datatype in Matlab.",
          "maxLength": 255,
          "default": "",
          "queryable": true
        },
        "openminds_id": {
          "type": "string",
          "description": "The unique identifier for the openminds version of the document.",
          "maxLength": 255,
          "default": "",
          "queryable": true
        },
        "fields": {
          "type": "object",
          "description": "The fields of the opemminds document.",
          "default": {},
          "queryable": true
        }
      }
    }
  },
  "allOf": [
    {
      "description": "Inherits all properties from base schema",
      "$ref": "$NDISCHEMAPATH/base_schema.json"
    }
  ],
  "additionalProperties": false
}
