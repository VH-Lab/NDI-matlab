{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Subject Document Schema",
  "description": "Schema for NDI subject documents that inherit from base",
  "type": "object",
  "required": ["document_class", "subject"],
  "properties": {
    "document_class": {
      "type": "object",
      "description": "",
      "required": ["definition", "validation", "class_name", "property_list_name", "class_version", "superclasses"],
      "properties": {
        "definition": {
          "type": "string",
          "description": "Path to the document definition file",
          "default": "$NDIDOCUMENTPATH/subject.json"
        },
        "validation": {
          "type": "string",
          "description": "Path to the schema validation file",
          "default": "$NDISCHEMAPATH/subject_schema.json"
        },
        "class_name": {
          "type": "string",
          "description": "Name of the document class",
          "enum": ["subject"]
        },
        "property_list_name": {
          "type": "string",
          "description": "Name of the property list",
          "enum": ["subject"]
        },
        "class_version": {
          "type": "integer",
          "description": "Version number of the document class",
          "default": 1
        },
        "superclasses": {
          "type": "array",
          "description": "List of superclass definitions",
          "items": {
            "type": "object",
            "description": "",
            "required": ["definition"],
            "properties": {
              "definition": {
                "type": "string",
                "description": "Path to the base document definition",
                "enum": ["$NDIDOCUMENTPATH/base.json"]
              }
            }
          },
          "minItems": 1,
          "maxItems": 1
        }
      }
    },
    "subject": {
      "type": "object",
      "required": ["local_identifier", "description"],
      "properties": {
        "local_identifier": {
          "type": "string",
          "description": "The identifier is usually constructed by concatenating a local identifier with the name of the group, such as `mouse123@vhlab.org`",
          "default": "",
          "queryable": true
        },
        "description": {
          "type": "string",
          "description": "A character string that is free for the user to choose",
          "default": "",
          "queryable": true
        }
      }
    }
  },
  "allOf": [
    {
      "description": "Inherits all properties from base schema",
      "$ref": "$NDISCHEMAPATH/base_schema.json"
    }
  ],
  "additionalProperties": false
}