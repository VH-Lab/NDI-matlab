{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "App Document Schema",
  "description": "",
  "type": "object",
  "required": ["document_class", "app"],
  "properties": {
    "document_class": {
      "type": "object",
      "description": "",
      "required": ["definition", "validation", "class_name", "property_list_name", "class_version", "superclasses"],
      "properties": {
        "definition": {
          "type": "string",
          "description": "Path to the document definition file",
          "default": "$NDIDOCUMENTPATH/app.json"
        },
        "class_name": {
          "type": "string",
          "description": "Name of the document class",
          "enum": ["app"]
        },
        "property_list_name": {
          "type": "string",
          "description": "Name of the property list",
          "enum": ["app"]
        },
        "class_version": {
          "type": "integer",
          "description": "Version number of the document class",
          "default": 1
        },
        "superclasses": {
          "type": "array",
          "description": "List of superclass definitions",
          "items": {
            "type": "object",
            "description": "",
            "required": ["definition"],
            "properties": {
              "definition": {
                "type": "string",
                "description": "Path to the base document definition",
                "enum": ["$NDIDOCUMENTPATH/base.json"]
              }
            }
          },
          "minItems": 1,
          "maxItems": 1
        }
      }
    },
    "app": {
      "type": "object",
      "description": "",
      "required": ["name", "version", "url", "os", "os_version", "interpreter", "interpreter_version"],
      "properties": {
        "name": {
          "type": "string",
          "description": "Name of the application",
          "default": "",
          "queryable": true
        },
        "version": {
          "type": "string",
          "description": "The version of the app according to the app's own version schedule; often this is a Git commit identifier",
          "default": "-",
          "queryable": true
        },
        "url": {
          "type": "string",
          "description": "The home page of the application",
          "default": "",
          "queryable": true
        },
        "os": {
          "type": "string",
          "description": "The operating system that ran the application",
          "default": "",
          "queryable": true
        },
        "os_version": {
          "type": "string",
          "description": "The operating system version",
          "default": "",
          "queryable": true
        },
        "interpreter": {
          "type": "string",
          "description": "If applicable, the name of the interpreter (Matlab, python3, etc)",
          "default": "",
          "queryable": true
        },
        "interpreter_version": {
          "type": "string",
          "description": "If applicable, the version of the interpreter",
          "default": "",
          "queryable": true
        }
      }
    }
  },
  "allOf": [
    {
      "description": "Inherits all properties from base schema",
      "$ref": "$NDISCHEMAPATH/base_schema.json"
    }
  ],
  "additionalProperties": false
}