{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Demo NDI Schema",
  "description": "",
  "type": "object",
  "required": ["document_class", "files", "demoNDI"],
  "properties": {
    "document_class": {
      "type": "object",
      "description": "",
      "required": ["definition", "validation", "class_name", "property_list_name", "class_version", "superclasses"],
      "properties": {
        "definition": {
          "type": "string",
          "description": "Path to the document definition file",
          "default": "$NDIDOCUMENTPATH/demoNDI.json"
        },
        "validation": {
          "type": "string",
          "description": "Path to the schema validation file",
          "default": "$NDISCHEMAPATH/demoNDI_schema.json"
        },
        "class_name": {
          "type": "string",
          "description": "Name of the document class",
          "enum": ["demoNDI"]
        },
        "property_list_name": {
          "type": "string",
          "description": "Name of the property list",
          "enum": ["demoNDI"]
        },
        "class_version": {
          "type": "integer",
          "description": "Version number of the document class",
          "default": 1
        },
        "superclasses": {
          "type": "array",
          "description": "List of superclass definitions",
          "items": {
            "type": "object",
            "description": "",
            "required": ["definition"],
            "properties": {
              "definition": {
                "type": "string",
                "description": "Path to the base document definition",
                "enum": ["$NDIDOCUMENTPATH/base.json"]
              }
            }
          },
          "minItems": 1,
          "maxItems": 1
        }
      }
    },
    "files": {
      "type": "object",
      "description": "Required files for this document",
      "required": ["file_list"],
      "properties": {
        "file_list": {
          "type": "array",
          "description": "List of required files",
          "items": {
            "type": "string",
            "description": "Required file with non-empty content",
            "enum": ["filename1.ext"]
          },
          "minItems": 1,
          "maxItems": 1,
          "mustbenotempty": true
        }
      }
    },
    "demoNDI": {
      "type": "object",
      "description": "",
      "required": ["value"],
      "properties": {
        "value": {
          "type": "integer",
          "description": "A value field for the demoNDI class.",
          "default": 1,
          "minimum": -100000,
          "maximum": 100000,
          "queryable": true
        }
      }
    }
  },
  "allOf": [
    {
      "description": "Inherits all properties from base schema",
      "$ref": "$NDISCHEMAPATH/base_schema.json"
    }
  ],
  "additionalProperties": false
}