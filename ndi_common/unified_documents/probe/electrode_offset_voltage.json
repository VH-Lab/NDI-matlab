{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "description": "",
  "required": ["document_class", "depends_on", "electrode_offset_voltage"],
  "properties": {
    "document_class": {
      "type": "object",
      "description": "",
      "required": ["definition", "validation", "class_name", "property_list_name", "class_version", "superclasses"],
      "properties": {
        "definition": {
          "type": "string",
          "description": "Path to the document definition file",
          "default": "$NDIDOCUMENTPATH/probe/electrode_offset_voltage.json"
        },
        "validation": {
          "type": "string",
          "description": "Path to the schema validation file",
          "default": "$NDISCHEMAPATH/probe/electrode_offset_voltage_schema.json"
        },
        "class_name": {
          "type": "string",
          "description": "",
          "enum": ["electrode_offset_voltage"],
          "enumDescriptions": {
            "electrode_offset_voltage": "Specifies this document as an electrode offset voltage class type"
          }
        },
        "property_list_name": {
          "type": "string",
          "description": "",
          "enum": ["electrode_offset_voltage"],
          "enumDescriptions": {
            "electrode_offset_voltage": "Defines the property list name for electrode offset voltage documents"
          }
        },
        "class_version": {
          "type": "integer",
          "description": "Version number of the document class",
          "default": 1
        },
        "superclasses": {
          "type": "array",
          "description": "",
          "items": {
            "type": "object",
            "required": ["definition"],
            "properties": {
              "definition": {
                "type": "string",
                "description": "",
                "enum": ["$NDIDOCUMENTPATH/base.json"],
                "enumDescriptions": {
                  "$NDIDOCUMENTPATH/base.json": "References the base document definition file for inheritance"
                }
              }
            }
          },
          "minItems": 1,
          "maxItems": 1
        }
      }
    },
    "depends_on": {
      "type": "array",
      "description": "Document dependencies with validation rules. Each dependency is specified as a name/value pair.",
      "items": {
        "type": "object",
        "required": ["name", "value"],
        "properties": {
          "name": {
            "type": "string",
            "enum": ["probe_id"],
            "description": "Name of the dependency",
            "enumDescriptions": {
              "probe_id": "Identifier linking to the probe document. Must not be empty."
            }
          },
          "value": {
            "type": "string",
            "description": "Value of the dependency"
          }
        }
      },
      "minItems": 1,
      "maxItems": 1,
      "mustbenotempty": {
        "probe_id": true
      }
    },
    "electrode_offset_voltage": {
      "type": "object",
      "description": "",
      "required": ["offset", "temperature"],
      "properties": {
        "offset": {
          "type": "number",
          "description": "The offset voltage of an electrode, measured in volts (V)",
          "minimum": -100000,
          "maximum": 100000,
          "queryable": true
        },
        "temperature": {
          "type": "number",
          "description": "The temperature at which the measurement was made, in degrees C (can be NaN or empty)",
          "minimum": -100000,
          "maximum": 100000,
          "queryable": true
        }
      }
    }
  },
  "allOf": [
    {
      "description": "Inherits all properties from base schema",
      "$ref": "$NDISCHEMAPATH/base_schema.json"
    }
  ],
  "additionalProperties": false
}
