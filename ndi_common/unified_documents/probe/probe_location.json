{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "description": "",
  "required": ["document_class", "depends_on", "probe_location"],
  "properties": {
    "document_class": {
      "type": "object",
      "description": "",
      "required": ["definition", "validation", "class_name", "property_list_name", "class_version", "superclasses"],
      "properties": {
        "definition": {
          "type": "string",
          "description": "Path to the document definition file",
          "default": "$NDIDOCUMENTPATH/probe/probe_location.json"
        },
        "validation": {
          "type": "string",
          "description": "Path to the schema validation file",
          "default": "$NDISCHEMAPATH/probe/probe_location_schema.json"
        },
        "class_name": {
          "type": "string",
          "description": "",
          "enum": ["probe_location"],
          "enumDescriptions": {
            "probe_location": "Specifies this document as a probe location class type"
          }
        },
        "property_list_name": {
          "type": "string",
          "description": "",
          "enum": ["probe_location"],
          "enumDescriptions": {
            "probe_location": "Defines the property list name for probe location documents"
          }
        },
        "class_version": {
          "type": "integer",
          "description": "Version number of the document class",
          "default": 1
        },
        "superclasses": {
          "type": "array",
          "description": "",
          "items": {
            "type": "object",
            "required": ["definition"],
            "properties": {
              "definition": {
                "type": "string",
                "description": "",
                "enum": ["$NDIDOCUMENTPATH/base.json"],
                "enumDescriptions": {
                  "$NDIDOCUMENTPATH/base.json": "References the base document definition file for inheritance"
                }
              }
            }
          },
          "minItems": 1,
          "maxItems": 1
        }
      }
    },
    "depends_on": {
      "type": "array",
      "description": "Document dependencies with validation rules. Each dependency is specified as a name/value pair.",
      "items": {
        "type": "object",
        "required": ["name", "value"],
        "properties": {
          "name": {
            "type": "string",
            "enum": ["probe_id"],
            "description": "Name of the dependency",
            "enumDescriptions": {
              "probe_id": "Identifier linking to the probe document. Must not be empty."
            }
          },
          "value": {
            "type": "string",
            "description": "Value of the dependency"
          }
        }
      },
      "minItems": 1,
      "maxItems": 1,
      "mustbenotempty": {
        "probe_id": true
      }
    },
    "probe_location": {
      "type": "object",
      "description": "",
      "required": ["ontology_name", "name"],
      "properties": {
        "ontology_name": {
          "type": "array",
          "description": "The name of the parameter in an ontology (e.g., uberon:0002436)",
          "items": {
            "type": "string"
          },
          "default": [],
          "queryable": true
        },
        "name": {
          "type": "array",
          "description": "Name of the location (e.g., primary visual cortex)",
          "items": {
            "type": "string"
          },
          "default": [],
          "queryable": true
        }
      }
    }
  },
  "allOf": [
    {
      "description": "Inherits all properties from base schema",
      "$ref": "$NDISCHEMAPATH/base_schema.json"
    }
  ],
  "additionalProperties": false
}
