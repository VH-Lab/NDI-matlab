{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "description": "",
  "required": ["document_class", "depends_on", "files", "syncrule_mapping"],
  "properties": {
    "document_class": {
      "type": "object",
      "description": "",
      "required": ["definition", "validation", "class_name", "property_list_name", "class_version", "superclasses"],
      "properties": {
        "definition": {
          "type": "string",
          "description": "Path to the document definition file",
          "default": "$NDIDOCUMENTPATH/ingestion/syncrule_mapping.json"
        },
        "validation": {
          "type": "string",
          "description": "Path to the schema validation file",
          "default": "$NDISCHEMAPATH/ingestion/syncrule_mapping_schema.json"
        },
        "class_name": {
          "type": "string",
          "description": "",
          "enum": ["syncrule_mapping"],
          "enumDescriptions": {
            "syncrule_mapping": "Class for defining mappings between epoch nodes using synchronization rules"
          }
        },
        "property_list_name": {
          "type": "string",
          "description": "",
          "enum": ["syncrule_mapping"],
          "enumDescriptions": {
            "syncrule_mapping": "Properties specific to synchronization rule mappings"
          }
        },
        "class_version": {
          "type": "integer",
          "description": "Version number of the document class",
          "default": 1
        },
        "superclasses": {
          "type": "array",
          "description": "",
          "items": {
            "type": "object",
            "required": ["definition"],
            "properties": {
              "definition": {
                "type": "string",
                "description": "",
                "enum": ["$NDIDOCUMENTPATH/base.json"],
                "enumDescriptions": {
                  "$NDIDOCUMENTPATH/base.json": "Base class providing common functionality for all NDI classes"
                }
              }
            }
          },
          "minItems": 1,
          "maxItems": 1
        }
      }
    },
    "depends_on": {
      "type": "array",
      "description": "Document dependencies with validation rules. Each dependency is specified as a name/value pair.",
      "items": {
        "type": "object",
        "required": ["name", "value"],
        "properties": {
          "name": {
            "type": "string",
            "enum": ["syncgraph_id", "syncrule_id"],
            "description": "Name of the dependency",
            "enumDescriptions": {
              "syncgraph_id": "Synchronization graph identifier - Required for mapping context",
              "syncrule_id": "Synchronization rule identifier - Required for defining the mapping"
            }
          },
          "value": {
            "type": "string",
            "description": "Value of the dependency"
          }
        }
      },
      "minItems": 2,
      "maxItems": 2,
      "mustbenotempty": {
        "syncgraph_id": true,
        "syncrule_id": true
      }
    },
    "files": {
      "type": "object",
      "description": "",
      "required": ["file_list"],
      "properties": {
        "file_list": {
          "type": "array",
          "description": "List of required files",
          "items": {
            "type": "string",
            "description": ""
          },
          "default": []
        }
      }
    },
    "syncrule_mapping": {
      "type": "object",
      "description": "",
      "required": ["cost", "mapping", "epochnode_a", "epochnode_b"],
      "properties": {
        "cost": {
          "type": "number",
          "description": "The cost of making the mapping from epochnode a to b",
          "default": 0,
          "minimum": 0,
          "maximum": 300000,
          "queryable": true
        },
        "mapping": {
          "type": "array",
          "description": "The mapping ([1xN] coefficients of a polynomial, high exponents first)",
          "default": [1, 0],
          "items": {
            "type": "number"
          },
          "minItems": 1,
          "format": "matrix",
          "queryable": true
        },
        "epochnode_a": {
          "type": "object",
          "description": "A structure describing the epochnode a",
          "required": ["epoch_id", "epoch_session_id", "epochprobemap", "epoch_clock", "t0_t1", "objectname", "objectclass"],
          "properties": {
            "epoch_id": {
              "type": "string",
              "description": "",
              "default": ""
            },
            "epoch_session_id": {
              "type": "string",
              "description": "",
              "default": ""
            },
            "epochprobemap": {
              "type": "string",
              "description": "",
              "default": ""
            },
            "epoch_clock": {
              "type": "string",
              "description": "",
              "default": ""
            },
            "t0_t1": {
              "type": "array",
              "description": "",
              "items": {
                "type": "number"
              },
              "minItems": 2,
              "maxItems": 2,
              "default": [0, 0]
            },
            "objectname": {
              "type": "string",
              "description": "",
              "default": ""
            },
            "objectclass": {
              "type": "string",
              "description": "",
              "default": ""
            }
          },
          "queryable": true
        },
        "epochnode_b": {
          "type": "object",
          "description": "A structure describing the epochnode b",
          "required": ["epoch_id", "epoch_session_id", "epochprobemap", "epoch_clock", "t0_t1", "objectname", "objectclass"],
          "properties": {
            "epoch_id": {
              "type": "string",
              "description": "",
              "default": ""
            },
            "epoch_session_id": {
              "type": "string",
              "description": "",
              "default": ""
            },
            "epochprobemap": {
              "type": "string",
              "description": "",
              "default": ""
            },
            "epoch_clock": {
              "type": "string",
              "description": "",
              "default": ""
            },
            "t0_t1": {
              "type": "array",
              "description": "",
              "items": {
                "type": "number"
              },
              "minItems": 2,
              "maxItems": 2,
              "default": [0, 0]
            },
            "objectname": {
              "type": "string",
              "description": "",
              "default": ""
            },
            "objectclass": {
              "type": "string",
              "description": "",
              "default": ""
            }
          },
          "queryable": true
        }
      }
    }
  },
  "allOf": [
    {
      "description": "Inherits all properties from base schema",
      "$ref": "$NDISCHEMAPATH/base_schema.json"
    }
  ],
  "additionalProperties": false
}
