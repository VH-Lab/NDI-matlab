{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "description": "",
  "required": ["document_class", "depends_on", "files", "daqmetadatareader_epochdata_ingested"],
  "properties": {
    "document_class": {
      "type": "object",
      "description": "",
      "required": ["definition", "validation", "class_name", "property_list_name", "class_version", "superclasses"],
      "properties": {
        "definition": {
          "type": "string",
          "description": "Path to the document definition file",
          "default": "$NDIDOCUMENTPATH/ingestion/daqmetadatareader_epochdata_ingested.json"
        },
        "validation": {
          "type": "string",
          "description": "Path to the schema validation file",
          "default": "$NDISCHEMAPATH/ingestion/daqmetadatareader_epochdata_ingested_schema.json"
        },
        "class_name": {
          "type": "string",
          "description": "",
          "enum": ["daqmetadatareader_epochdata_ingested"],
          "enumDescriptions": {
            "daqmetadatareader_epochdata_ingested": "Class for tracking ingested epoch data from DAQ metadata reader"
          }
        },
        "property_list_name": {
          "type": "string",
          "description": "",
          "enum": ["daqmetadatareader_epochdata_ingested"],
          "enumDescriptions": {
            "daqmetadatareader_epochdata_ingested": "Properties specific to ingested epoch data from DAQ metadata reader"
          }
        },
        "class_version": {
          "type": "integer",
          "description": "Version number of the document class",
          "default": 1
        },
        "superclasses": {
          "type": "array",
          "description": "",
          "items": {
            "type": "object",
            "required": ["definition"],
            "properties": {
              "definition": {
                "type": "string",
                "description": "",
                "enum": ["$NDIDOCUMENTPATH/base.json", "$NDIDOCUMENTPATH/epochid.json"],
                "enumDescriptions": {
                  "$NDIDOCUMENTPATH/base.json": "Base class providing common functionality for all NDI classes",
                  "$NDIDOCUMENTPATH/epochid.json": "Class providing epoch identification functionality"
                }
              }
            }
          },
          "minItems": 2,
          "maxItems": 2
        }
      }
    },
    "depends_on": {
      "type": "array",
      "description": "Document dependencies with validation rules. Each dependency is specified as a name/value pair.",
      "items": {
        "type": "object",
        "required": ["name", "value"],
        "properties": {
          "name": {
            "type": "string",
            "enum": ["daqmetadatareader_id"],
            "description": "Name of the dependency",
            "enumDescriptions": {
              "daqmetadatareader_id": "DAQ metadata reader identifier - Required for accessing epoch metadata"
            }
          },
          "value": {
            "type": "string",
            "description": "Value of the dependency"
          }
        }
      },
      "minItems": 1,
      "maxItems": 1,
      "mustbenotempty": {
        "daqmetadatareader_id": true
      }
    },
    "files": {
      "type": "object",
      "description": "",
      "required": ["file_list"],
      "properties": {
        "file_list": {
          "type": "array",
          "description": "List of required files",
          "items": {
            "type": "string",
            "enum": ["data.bin"],
            "enumDescriptions": {
              "data.bin": "Binary data file containing ingested epoch data"
            }
          },
          "minItems": 1,
          "maxItems": 1
        }
      }
    },
    "daqmetadatareader_epochdata_ingested": {
      "type": "object",
      "description": "",
      "properties": {}
    }
  },
  "allOf": [
    {
      "description": "Inherits all properties from base schema",
      "$ref": "$NDISCHEMAPATH/base_schema.json"
    },
    {
      "description": "Inherits all properties from epochid schema",
      "$ref": "$NDISCHEMAPATH/epochid_schema.json"
    }
  ],
  "additionalProperties": false
}
