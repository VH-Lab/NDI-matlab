{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Element Epoch Schema",
  "description": "",
  "type": "object",
  "required": ["document_class", "depends_on", "files", "element_epoch"],
  "properties": {
    "document_class": {
      "type": "object",
      "description": "",
      "required": ["definition", "validation", "class_name", "property_list_name", "class_version", "superclasses"],
      "properties": {
        "definition": {
          "type": "string",
          "description": "Path to the document definition file",
          "default": "$NDIDOCUMENTPATH/element_epoch.json"
        },
        "validation": {
          "type": "string",
          "description": "Path to the schema validation file",
          "default": "$NDISCHEMAPATH/element_epoch_schema.json"
        },
        "class_name": {
          "type": "string",
          "description": "Name of the document class",
          "enum": ["element_epoch"]
        },
        "property_list_name": {
          "type": "string",
          "description": "Name of the property list",
          "enum": ["element_epoch"]
        },
        "class_version": {
          "type": "integer",
          "description": "Version number of the document class",
          "default": 1
        },
        "superclasses": {
          "type": "array",
          "description": "List of superclass definitions",
          "items": {
            "type": "object",
            "description": "",
            "required": ["definition"],
            "properties": {
              "definition": {
                "type": "string",
                "description": "Path to the base document definition",
                "enum": ["$NDIDOCUMENTPATH/base.json", "$NDIDOCUMENTPATH/epochid.json"]
              }
            }
          },
          "minItems": 2,
          "maxItems": 2,
          "uniqueItems": true
        }
      }
    },
    "depends_on": {
      "type": "array",
      "description": "Document dependencies",
      "items": {
        "type": "object",
        "required": ["name", "value"],
        "properties": {
          "name": {
            "type": "string",
            "enum": ["element_id"],
            "description": "Name of the dependency"
          },
          "value": {
            "type": "string",
            "description": "Value of the dependency"
          }
        }
      },
      "minItems": 1,
      "maxItems": 1,
      "mustbenotempty": {
        "element_id": true
      }
    },
    "files": {
      "type": "object",
      "description": "Required files for this document",
      "required": ["file_list"],
      "properties": {
        "file_list": {
          "type": "array",
          "description": "List of required files",
          "items": {
            "type": "string",
            "enum": ["epoch_binary_data.vhsb"],
            "description": "Required binary data file that must not be empty"
          },
          "minItems": 1,
          "maxItems": 1,
          "mustbenotempty": true
        }
      }
    },
    "element_epoch": {
      "type": "object",
      "description": "",
      "required": ["epoch_clock", "t0_t1"],
      "properties": {
        "epoch_clock": {
          "type": "string",
          "description": "The epoch clock type of the epoch data.",
          "default": "",
          "queryable": true
        },
        "t0_t1": {
          "type": "array",
          "description": "The beginning and end of the epoch, in epoch clock time units.",
          "items": {
            "type": "number"
          },
          "minItems": 2,
          "maxItems": 2,
          "default": [0, 0],
          "queryable": true,
          "format": "matrix",
          "dimensions": [2, 1]
        }
      }
    }
  },
  "allOf": [
    {
      "description": "Inherits all properties from base schema",
      "$ref": "$NDISCHEMAPATH/base_schema.json"
    },
    {
      "description": "Inherits all properties from epochid schema",
      "$ref": "$NDISCHEMAPATH/epochid_schema.json"
    }
  ],
  "additionalProperties": false
}