{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Dataset Session Info Schema",
  "description": "",
  "type": "object",
  "required": ["document_class", "depends_on", "dataset_session_info"],
  "properties": {
    "document_class": {
      "type": "object",
      "description": "",
      "required": ["definition", "validation", "class_name", "property_list_name", "class_version", "superclasses"],
      "properties": {
        "definition": {
          "type": "string",
          "description": "Path to the document definition file",
          "default": "$NDIDOCUMENTPATH/dataset_session_info.json"
        },
        "validation": {
          "type": "string",
          "description": "Path to the schema validation file",
          "default": "$NDISCHEMAPATH/dataset_session_info_schema.json"
        },
        "class_name": {
          "type": "string",
          "description": "Name of the document class",
          "enum": ["dataset_session_info"],
          "enumDescriptions": {
            "dataset_session_info": "Specifies this document as a dataset session info class type"
          }
        },
        "property_list_name": {
          "type": "string",
          "description": "Name of the property list",
          "enum": ["dataset_session_info"],
          "enumDescriptions": {
            "dataset_session_info": "Defines the property list name for dataset session info documents"
          }
        },
        "class_version": {
          "type": "integer",
          "description": "Version number of the document class",
          "default": 1
        },
        "superclasses": {
          "type": "array",
          "description": "List of superclass definitions",
          "items": {
            "type": "object",
            "description": "",
            "required": ["definition"],
            "properties": {
              "definition": {
                "type": "string",
                "description": "Path to the base document definition",
                "enum": ["$NDIDOCUMENTPATH/base.json"],
                "enumDescriptions": {
                  "$NDIDOCUMENTPATH/base.json": "References the base document definition file for inheritance"
                }
              }
            }
          },
          "minItems": 1,
          "maxItems": 1
        }
      }
    },
    "depends_on": {
      "type": "array",
      "description": "Document dependencies with validation rules. Each dependency is specified as a name/value pair.",
      "items": {
        "type": "object",
        "required": ["name", "value"],
        "properties": {
          "name": {
            "type": "string",
            "enum": ["session_id"],
            "description": "Name of the dependency",
            "enumDescriptions": {
              "session_id": "Identifier linking to the associated session document. Must not be empty."
            }
          },
          "value": {
            "type": "string",
            "description": "Value of the dependency"
          }
        }
      },
      "minItems": 1,
      "maxItems": 1,
      "mustbenotempty": {
        "session_id": true
      }
    },
    "dataset_session_info": {
      "type": "object",
      "description": "",
      "required": ["dataset_session_info"],
      "properties": {
        "dataset_session_info": {
          "type": "object",
          "description": "Session information about for an ndi.dataset object",
          "default": "",
          "queryable": true
        }
      }
    }
  },
  "allOf": [
    {
      "description": "Inherits all properties from base schema",
      "$ref": "$NDISCHEMAPATH/base_schema.json"
    }
  ],
  "additionalProperties": false
}
