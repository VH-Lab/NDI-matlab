{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Epoch ID Schema",
  "description": "",
  "type": "object",
  "required": ["document_class", "epochid"],
  "properties": {
    "document_class": {
      "type": "object",
      "description": "",
      "required": ["definition", "validation", "class_name", "property_list_name", "class_version", "superclasses"],
      "properties": {
        "definition": {
          "type": "string",
          "description": "Path to the document definition file",
          "default": "$NDIDOCUMENTPATH/epochid.json"
        },
        "class_name": {
          "type": "string",
          "description": "Name of the document class",
          "enum": ["epochid"]
        },
        "property_list_name": {
          "type": "string",
          "description": "Name of the property list",
          "enum": ["epochid"]
        },
        "class_version": {
          "type": "integer",
          "description": "Version number of the document class",
          "default": 1
        },
        "superclasses": {
          "type": "array",
          "description": "List of superclass definitions",
          "items": {
            "type": "object",
            "description": "",
            "required": ["definition"],
            "properties": {
              "definition": {
                "type": "string",
                "description": "Path to the base document definition",
                "enum": ["$NDIDOCUMENTPATH/base.json"]
              }
            }
          },
          "minItems": 1,
          "maxItems": 1
        }
      }
    },
    "epochid": {
      "type": "object",
      "description": "",
      "required": ["epochid"],
      "properties": {
        "epochid": {
          "type": "string",
          "description": "The epochid to be stored",
          "default": "",
          "queryable": true
        }
      }
    }
  },
  "allOf": [
    {
      "description": "Inherits all properties from base schema",
      "$ref": "$NDIDOCUMENTPATH/base.json"
    }
  ],
  "additionalProperties": false
}