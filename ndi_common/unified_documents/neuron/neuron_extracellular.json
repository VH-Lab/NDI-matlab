{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "description": "",
  "required": ["document_class", "depends_on", "neuron_extracellular"],
  "properties": {
    "document_class": {
      "type": "object",
      "description": "",
      "required": ["definition", "validation", "class_name", "property_list_name", "class_version", "superclasses"],
      "properties": {
        "definition": {
          "type": "string",
          "description": "Path to the document definition file",
          "default": "$NDIDOCUMENTPATH/neuron/neuron_extracellular.json"
        },
        "validation": {
          "type": "string",
          "description": "Path to the schema validation file",
          "default": "$NDISCHEMAPATH/neuron/neuron_extracellular_schema.json"
        },
        "class_name": {
          "type": "string",
          "description": "",
          "enum": ["neuron_extracellular"],
          "enumDescriptions": {
            "neuron_extracellular": "Specifies this document as a neuron extracellular class type"
          }
        },
        "property_list_name": {
          "type": "string",
          "description": "",
          "enum": ["neuron_extracellular"],
          "enumDescriptions": {
            "neuron_extracellular": "Defines the property list name for neuron extracellular documents"
          }
        },
        "class_version": {
          "type": "integer",
          "description": "Version number of the document class",
          "default": 1
        },
        "superclasses": {
          "type": "array",
          "description": "",
          "items": {
            "type": "object",
            "required": ["definition"],
            "properties": {
              "definition": {
                "type": "string",
                "description": "",
                "enum": ["$NDIDOCUMENTPATH/base.json", "$NDIDOCUMENTPATH/app.json"],
                "enumDescriptions": {
                  "$NDIDOCUMENTPATH/base.json": "References the base document definition file for inheritance",
                  "$NDIDOCUMENTPATH/app.json": "References the app document definition file for inheritance"
                }
              }
            }
          },
          "minItems": 2,
          "maxItems": 2
        }
      }
    },
    "depends_on": {
      "type": "array",
      "description": "Document dependencies with validation rules. Each dependency is specified as a name/value pair.",
      "items": {
        "type": "object",
        "required": ["name", "value"],
        "properties": {
          "name": {
            "type": "string",
            "enum": ["element_id", "spike_clusters_id"],
            "description": "Name of the dependency",
            "enumDescriptions": {
              "element_id": "Identifier linking to the element document. Must not be empty.",
              "spike_clusters_id": "Identifier linking to the spike clusters document. May be empty."
            }
          },
          "value": {
            "type": "string",
            "description": "Value of the dependency"
          }
        }
      },
      "minItems": 2,
      "maxItems": 2,
      "mustbenotempty": {
        "element_id": true,
        "spike_clusters_id": false
      }
    },
    "neuron_extracellular": {
      "type": "object",
      "description": "",
      "required": [
        "number_of_samples_per_channel",
        "number_of_channels",
        "mean_waveform",
        "waveform_sample_times",
        "cluster_index",
        "quality_number",
        "quality_label"
      ],
      "properties": {
        "number_of_samples_per_channel": {
          "type": "array",
          "items": {
            "type": "integer",
            "minimum": 1,
            "maximum": 100000
          },
          "description": "The number of samples in each spike per channel.",
          "default": [],
          "queryable": true
        },
        "number_of_channels": {
          "type": "array",
          "items": {
            "type": "integer",
            "minimum": 1,
            "maximum": 100000
          },
          "description": "The number of channels per sample.",
          "default": [],
          "queryable": true
        },
        "mean_waveform": {
          "type": "array",
          "description": "The mean waveform (NumSamples x NumChannels).",
          "format": "matrix",
          "items": {
            "type": "number"
          },
          "default": [],
          "queryable": true
        },
        "waveform_sample_times": {
          "type": "array",
          "description": "The sample times (relative to the spike) of the mean waveform.",
          "format": "matrix",
          "items": {
            "type": "number"
          },
          "default": [],
          "queryable": true
        },
        "cluster_index": {
          "type": "integer",
          "description": "The cluster id number for this spike waveform",
          "minimum": -1,
          "maximum": 10000,
          "default": 0,
          "queryable": true
        },
        "quality_number": {
          "type": "integer",
          "description": "The quality of the spike waveform",
          "minimum": -1,
          "maximum": 10000,
          "default": 0,
          "queryable": true
        },
        "quality_label": {
          "type": "string",
          "description": "The quality label of the spike waveform",
          "default": "",
          "queryable": true
        }
      }
    }
  },
  "allOf": [
    {
      "description": "Inherits all properties from base schema",
      "$ref": "$NDISCHEMAPATH/base_schema.json"
    },
    {
      "description": "Inherits all properties from app schema",
      "$ref": "$NDISCHEMAPATH/app_schema.json"
    }
  ],
  "additionalProperties": false
}
