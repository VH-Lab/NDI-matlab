{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "description": "",
  "required": ["document_class", "depends_on", "fitcurve"],
  "properties": {
    "document_class": {
      "type": "object",
      "description": "",
      "required": ["definition", "validation", "class_name", "property_list_name", "class_version", "superclasses"],
      "properties": {
        "definition": {
          "type": "string",
          "description": "Path to the document definition file",
          "default": "$NDIDOCUMENTPATH/data/fitcurve.json"
        },
        "validation": {
          "type": "string",
          "description": "Path to the schema validation file",
          "default": "$NDISCHEMAPATH/data/fitcurve.json"
        },
        "class_name": {
          "type": "string",
          "description": "",
          "enum": ["fitcurve"],
          "enumDescriptions": {
            "fitcurve": "Specifies this document as a fit curve class type"
          }
        },
        "property_list_name": {
          "type": "string",
          "description": "",
          "enum": ["fitcurve"],
          "enumDescriptions": {
            "fitcurve": "Defines the property list name for fit curve documents"
          }
        },
        "class_version": {
          "type": "integer",
          "description": "Version number of the document class",
          "default": 1
        },
        "superclasses": {
          "type": "array",
          "description": "",
          "items": {
            "type": "object",
            "required": ["definition"],
            "properties": {
              "definition": {
                "type": "string",
                "description": "",
                "enum": ["$NDIDOCUMENTPATH/base.json"],
                "enumDescriptions": {
                  "$NDIDOCUMENTPATH/base.json": "References the base document definition file for inheritance"
                }
              }
            }
          },
          "minItems": 1,
          "maxItems": 1
        }
      }
    },
    "depends_on": {
      "type": "array",
      "description": "Document dependencies with validation rules. Each dependency is specified as a name/value pair.",
      "items": {
        "type": "object",
        "required": ["name", "value"],
        "properties": {
          "name": {
            "type": "string",
            "enum": ["fit_example_data_id"],
            "description": "Name of the dependency",
            "enumDescriptions": {
              "fit_example_data_id": "Identifier linking to the fit example data document. Must not be empty."
            }
          },
          "value": {
            "type": "string",
            "description": "Value of the dependency"
          }
        }
      },
      "minItems": 1,
      "maxItems": 1,
      "mustbenotempty": {
        "fit_example_data_id": true
      }
    },
    "fitcurve": {
      "type": "object",
      "description": "",
      "required": [
        "fit_name",
        "fit_equation",
        "fit_parameters",
        "fit_parameter_names",
        "fit_independent_variable_names",
        "fit_dependent_variable_names",
        "fit_sse",
        "fit_constraints",
        "fit_data"
      ],
      "properties": {
        "fit_name": {
          "type": "string",
          "description": "A name of the fit (user selectable).",
          "default": "",
          "queryable": true
        },
        "fit_equation": {
          "type": "string",
          "description": "A string equation of the fit in the form y=f(x).",
          "default": "y=a+b*x.^c",
          "queryable": true
        },
        "fit_parameters": {
          "type": "array",
          "description": "The values of the fit parameters.",
          "format": "matrix",
          "items": {
            "type": "number"
          },
          "default": [0, 1, 2],
          "queryable": true
        },
        "fit_parameter_names": {
          "type": "string",
          "description": "The names of the fit variables (should correspond to variables in the fit_equation)",
          "default": "a b c",
          "queryable": true
        },
        "fit_independent_variable_names": {
          "type": "string",
          "description": "The name(s) of the independent variable(s)",
          "default": "x",
          "queryable": true
        },
        "fit_dependent_variable_names": {
          "type": "string",
          "description": "The name(s) of the dependent variable(s)",
          "default": "y",
          "queryable": true
        },
        "fit_sse": {
          "type": "number",
          "description": "The sum of squared errors for the fit",
          "default": 0,
          "queryable": true
        },
        "fit_constraints": {
          "type": "array",
          "description": "A structure with fields fit_constraint_name and fit_constraint_value",
          "items": {
            "type": "object",
            "required": ["fit_constraint_name", "fit_constraint_value"],
            "properties": {
              "fit_constraint_name": {
                "type": "string",
                "description": "Name of the fit constraint",
                "default": ""
              },
              "fit_constraint_value": {
                "type": "number",
                "description": "Value of the fit constraint",
                "default": 0
              }
            }
          },
          "default": [],
          "queryable": true
        },
        "fit_data": {
          "type": "object",
          "description": "A structure with fields input_data_field, output_data_field, output_number_examples",
          "required": ["input_data_field", "output_data_field", "output_number_examples"],
          "properties": {
            "input_data_field": {
              "type": "string",
              "description": "Field name for input data",
              "default": "mydocumenttype.x"
            },
            "output_data_field": {
              "type": "string",
              "description": "Field name for output data",
              "default": "mydocumenttype.y"
            },
            "output_number_examples": {
              "type": "integer",
              "description": "Number of output examples",
              "default": 20
            }
          },
          "queryable": true
        }
      }
    }
  },
  "allOf": [
    {
      "description": "Inherits all properties from base schema",
      "$ref": "$NDISCHEMAPATH/base_schema.json"
    }
  ],
  "additionalProperties": false
}
