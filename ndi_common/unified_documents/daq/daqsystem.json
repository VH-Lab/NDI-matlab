{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "description": "",
  "required": ["document_class", "depends_on", "daqsystem"],
  "properties": {
    "document_class": {
      "type": "object",
      "description": "",
      "required": ["definition", "validation", "class_name", "property_list_name", "class_version", "superclasses"],
      "properties": {
        "definition": {
          "type": "string",
          "description": "Path to the document definition file",
          "default": "$NDIDOCUMENTPATH/daq/daqsystem.json"
        },
        "validation": {
          "type": "string",
          "description": "Path to the schema validation file",
          "default": "$NDISCHEMAPATH/daq/daqsystem_schema.json"
        },
        "class_name": {
          "type": "string",
          "description": "",
          "enum": ["daqsystem"],
          "enumDescriptions": {
            "daqsystem": "Data acquisition system class for handling data collection and storage"
          }
        },
        "property_list_name": {
          "type": "string",
          "description": "",
          "enum": ["daqsystem"],
          "enumDescriptions": {
            "daqsystem": "Properties specific to the data acquisition system"
          }
        },
        "class_version": {
          "type": "integer",
          "description": "Version number of the document class",
          "default": 1
        },
        "superclasses": {
          "type": "array",
          "description": "",
          "items": {
            "type": "object",
            "required": ["definition"],
            "properties": {
              "definition": {
                "type": "string",
                "description": "",
                "enum": ["$NDIDOCUMENTPATH/base.json"],
                "enumDescriptions": {
                  "$NDIDOCUMENTPATH/base.json": "Base class providing common functionality for all NDI classes"
                }
              }
            }
          },
          "minItems": 1,
          "maxItems": 1
        }
      }
    },
    "depends_on": {
      "type": "array",
      "description": "Document dependencies with validation rules. Each dependency is specified as a name/value pair.",
      "items": {
        "type": "object",
        "required": ["name", "value"],
        "properties": {
          "name": {
            "type": "string",
            "enum": ["filenavigator_id", "daqreader_id", "daqmetadatareader_id"],
            "description": "Name of the dependency",
            "enumDescriptions": {
              "filenavigator_id": "File navigator identifier - Required, must not be empty",
              "daqreader_id": "DAQ reader identifier - Required, must not be empty",
              "daqmetadatareader_id": "DAQ metadata reader identifier - Optional, can be empty"
            }
          },
          "value": {
            "type": "string",
            "description": "Value of the dependency"
          }
        }
      },
      "minItems": 3,
      "maxItems": 3,
      "mustbenotempty": {
        "filenavigator_id": true,
        "daqreader_id": true,
        "daqmetadatareader_id": false
      }
    },
    "daqsystem": {
      "type": "object",
      "description": "",
      "required": ["ndi_daqsystem_class"],
      "properties": {
        "ndi_daqsystem_class": {
          "type": "string",
          "description": "The name of the ndi.daqsystem class object that is being stored.",
          "default": "",
          "queryable": true
        }
      }
    }
  },
  "allOf": [
    {
      "description": "Inherits all properties from base schema",
      "$ref": "$NDISCHEMAPATH/base_schema.json"
    }
  ],
  "additionalProperties": false
}
