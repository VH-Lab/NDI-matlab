{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "description": "",
  "required": ["document_class", "syncrule"],
  "properties": {
    "document_class": {
      "type": "object",
      "description": "",
      "required": ["definition", "validation", "class_name", "property_list_name", "class_version", "superclasses"],
      "properties": {
        "definition": {
          "type": "string",
          "description": "Path to the document definition file",
          "default": "$NDIDOCUMENTPATH/daq/syncrule.json"
        },
        "validation": {
          "type": "string",
          "description": "Path to the schema validation file",
          "default": "$NDISCHEMAPATH/daq/syncrule_schema.json"
        },
        "class_name": {
          "type": "string",
          "description": "",
          "enum": ["syncrule"],
          "enumDescriptions": {
            "syncrule": "Synchronization rule class for defining temporal relationships"
          }
        },
        "property_list_name": {
          "type": "string",
          "description": "",
          "enum": ["syncrule"],
          "enumDescriptions": {
            "syncrule": "Properties specific to the synchronization rule system"
          }
        },
        "class_version": {
          "type": "integer",
          "description": "Version number of the document class",
          "default": 1
        },
        "superclasses": {
          "type": "array",
          "description": "",
          "items": {
            "type": "object",
            "required": ["definition"],
            "properties": {
              "definition": {
                "type": "string",
                "description": "",
                "enum": ["$NDIDOCUMENTPATH/base.json"],
                "enumDescriptions": {
                  "$NDIDOCUMENTPATH/base.json": "Base class providing common functionality for all NDI classes"
                }
              }
            }
          },
          "minItems": 1,
          "maxItems": 1
        }
      }
    },
    "depends_on": {
      "type": "array",
      "description": "Document dependencies with validation rules. Each dependency is specified as a name/value pair.",
      "items": {
        "type": "object",
        "required": ["name", "value"],
        "properties": {
          "name": {
            "type": "string",
            "description": "Name of the dependency"
          },
          "value": {
            "type": "string",
            "description": "Value of the dependency"
          }
        }
      },
      "minItems": 0,
      "maxItems": 0
    },
    "syncrule": {
      "type": "object",
      "description": "",
      "required": ["ndi_syncrule_class", "parameters"],
      "properties": {
        "ndi_syncrule_class": {
          "type": "string",
          "description": "The ndi.syncrule object class name that is being stored.",
          "default": "",
          "queryable": true
        },
        "parameters": {
          "type": "array",
          "description": "The parameters that define the syncrule.",
          "default": [],
          "queryable": true,
          "items": {
            "type": "object",
            "description": ""
          }
        }
      }
    }
  },
  "allOf": [
    {
      "description": "Inherits all properties from base schema",
      "$ref": "$NDISCHEMAPATH/base_schema.json"
    }
  ],
  "additionalProperties": false
}
