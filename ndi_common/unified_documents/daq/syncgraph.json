{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "description": "",
  "required": ["document_class", "depends_on", "syncgraph"],
  "properties": {
    "document_class": {
      "type": "object",
      "description": "",
      "required": ["definition", "validation", "class_name", "property_list_name", "class_version", "superclasses"],
      "properties": {
        "definition": {
          "type": "string",
          "description": "Path to the document definition file",
          "default": "$NDIDOCUMENTPATH/daq/syncgraph.json"
        },
        "validation": {
          "type": "string",
          "description": "Path to the schema validation file",
          "default": "$NDISCHEMAPATH/daq/syncgraph_schema.json"
        },
        "class_name": {
          "type": "string",
          "description": "",
          "enum": ["syncgraph"],
          "enumDescriptions": {
            "syncgraph": "Synchronization graph class for managing temporal relationships between data streams"
          }
        },
        "property_list_name": {
          "type": "string",
          "description": "",
          "enum": ["syncgraph"],
          "enumDescriptions": {
            "syncgraph": "Properties specific to the synchronization graph system"
          }
        },
        "class_version": {
          "type": "integer",
          "description": "Version number of the document class",
          "default": 1
        },
        "superclasses": {
          "type": "array",
          "description": "",
          "items": {
            "type": "object",
            "required": ["definition"],
            "properties": {
              "definition": {
                "type": "string",
                "description": "",
                "enum": ["$NDIDOCUMENTPATH/base.json"],
                "enumDescriptions": {
                  "$NDIDOCUMENTPATH/base.json": "Base class providing common functionality for all NDI classes"
                }
              }
            }
          },
          "minItems": 1,
          "maxItems": 1
        }
      }
    },
    "depends_on": {
      "type": "array",
      "description": "Document dependencies with validation rules. Each dependency is specified as a name/value pair.",
      "items": {
        "type": "object",
        "required": ["name", "value"],
        "properties": {
          "name": {
            "type": "string",
            "enum": ["syncrule_id"],
            "description": "Name of the dependency",
            "enumDescriptions": {
              "syncrule_id": "Synchronization rule identifier - Optional reference to a syncrule document that defines temporal relationships"
            }
          },
          "value": {
            "type": "string",
            "description": "Value of the dependency"
          }
        }
      },
      "minItems": 0,
      "maxItems": 1,
      "mustbenotempty": {
        "syncrule_id": false
      }
    },
    "syncgraph": {
      "type": "object",
      "description": "",
      "required": ["ndi_syncgraph_class"],
      "properties": {
        "ndi_syncgraph_class": {
          "type": "string",
          "description": "The ndi.syncgraph class name of the syncgraph that is being stored.",
          "default": "",
          "queryable": true
        }
      }
    }
  },
  "allOf": [
    {
      "description": "Inherits all properties from base schema",
      "$ref": "$NDISCHEMAPATH/base_schema.json"
    }
  ],
  "additionalProperties": false
}
