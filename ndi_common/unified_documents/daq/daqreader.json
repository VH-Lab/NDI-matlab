{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "description": "",
  "required": ["document_class", "daqreader"],
  "properties": {
    "document_class": {
      "type": "object",
      "description": "",
      "required": ["definition", "validation", "class_name", "property_list_name", "class_version", "superclasses"],
      "properties": {
        "definition": {
          "type": "string",
          "description": "Path to the document definition file",
          "default": "$NDIDOCUMENTPATH/daq/daqreader.json"
        },
        "validation": {
          "type": "string",
          "description": "Path to the schema validation file",
          "default": "$NDISCHEMAPATH/daq/daqreader_schema.json"
        },
        "class_name": {
          "type": "string",
          "description": "",
          "enum": ["daqreader"],
          "enumDescriptions": {
            "daqreader": "Specifies this document as a DAQ reader class type"
          }
        },
        "property_list_name": {
          "type": "string",
          "description": "",
          "enum": ["daqreader"],
          "enumDescriptions": {
            "daqreader": "Defines the property list name for DAQ reader documents"
          }
        },
        "class_version": {
          "type": "integer",
          "description": "Version number of the document class",
          "default": 1
        },
        "superclasses": {
          "type": "array",
          "description": "",
          "items": {
            "type": "object",
            "required": ["definition"],
            "properties": {
              "definition": {
                "type": "string",
                "description": "",
                "enum": ["$NDIDOCUMENTPATH/base.json"],
                "enumDescriptions": {
                  "$NDIDOCUMENTPATH/base.json": "References the base document definition file for inheritance"
                }
              }
            }
          },
          "minItems": 1,
          "maxItems": 1
        }
      }
    },
    "daqreader": {
      "type": "object",
      "description": "",
      "required": ["ndi_daqreader_class"],
      "properties": {
        "ndi_daqreader_class": {
          "type": "string",
          "description": "The ndi.daqreader class type that is stored here.",
          "default": "",
          "queryable": true
        }
      }
    }
  },
  "allOf": [
    {
      "description": "Inherits all properties from base schema",
      "$ref": "$NDISCHEMAPATH/base_schema.json"
    }
  ],
  "additionalProperties": false
}
