{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Subject Measurement Schema",
  "description": "",
  "type": "object",
  "required": ["document_class", "depends_on", "subjectmeasurement"],
  "properties": {
    "document_class": {
      "type": "object",
      "description": "",
      "required": ["definition", "validation", "class_name", "property_list_name", "class_version", "superclasses"],
      "properties": {
        "definition": {
          "type": "string",
          "description": "Path to the document definition file",
          "default": "$NDIDOCUMENTPATH/subjectmeasurement.json"
        },
        "validation": {
          "type": "string",
          "description": "Path to the schema validation file",
          "default": "$NDISCHEMAPATH/subjectmeasurement_schema.json"
        },
        "class_name": {
          "type": "string",
          "description": "Name of the document class",
          "enum": ["subjectmeasurement"]
        },
        "property_list_name": {
          "type": "string",
          "description": "Name of the property list",
          "enum": ["subjectmeasurement"]
        },
        "class_version": {
          "type": "integer",
          "description": "Version number of the document class",
          "default": 1
        },
        "superclasses": {
          "type": "array",
          "description": "List of superclass definitions",
          "items": {
            "type": "object",
            "description": "",
            "required": ["definition"],
            "properties": {
              "definition": {
                "type": "string",
                "description": "Path to the base document definition",
                "enum": ["$NDIDOCUMENTPATH/base.json"]
              }
            }
          },
          "minItems": 1,
          "maxItems": 1
        }
      }
    },
    "depends_on": {
      "type": "array",
      "description": "Document dependencies",
      "items": {
        "type": "object",
        "required": ["name", "value"],
        "properties": {
          "name": {
            "type": "string",
            "enum": ["subject_id"],
            "description": "Name of the dependency"
          },
          "value": {
            "type": "string",
            "description": "Value of the dependency"
          }
        }
      },
      "minItems": 1,
      "maxItems": 1,
      "mustbenotempty": {
        "subject_id": true
      }
    },
    "subjectmeasurement": {
      "type": "object",
      "description": "",
      "required": ["measurement", "value", "datestamp"],
      "properties": {
        "measurement": {
          "type": "string",
          "description": "The name of a measurement that was taken.",
          "default": "",
          "queryable": true
        },
        "value": {
          "type": "array",
          "description": "The value of the measurement.",
          "items": {
            "type": "number"
          },
          "default": [0],
          "queryable": true,
          "format": "matrix",
          "dimensions": "flexible",
          "minItems": 1
        },
        "datestamp": {
          "type": "string",
          "description": "The timestamp of the measurement.",
          "default": "",
          "format": "date-time",
          "queryable": true
        }
      }
    }
  },
  "allOf": [
    {
      "description": "Inherits all properties from base schema",
      "$ref": "$NDISCHEMAPATH/base_schema.json"
    }
  ],
  "additionalProperties": false
}